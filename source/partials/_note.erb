<!--
	Note block
-->

<% data.texts.news.each do |article| %>
<table width="600">
	<tr>
		<td width="20" height="20" class="td_yellow">
			<img src="images/note_arrow.gif" width="20" height="20" alt="" />
		</td>
		<td rowspan="3" width="85" height="85" class="td_yellow">
			<img src="images/note_number-01.png" width="85" height="85" alt="01" />
		</td>
		<td rowspan="3" class="td_yellow">
			<table>
				<tr>
					<td height="20" class="td_yellow"></td>
					<td height="20" width="20" class="td_yellow"></td>
				</tr>
				<tr>
					<td class="td_yellow">
						<div class="text text_primary text_tt"><strong><%= article.title %></strong><br /><br /></div>
						<div class="text text_primary"><%= article.body %></div>
					</td>
					<td height="20" width="20" class="td_yellow"></td>
				</tr>
				<tr>
					<td height="20" class="td_yellow"></td>
					<td height="20" width="20" class="td_yellow"></td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td width="20" class="td_gray">
			&nbsp;
		</td>
	</tr>
	<tr>
		<td width="20" class="td_gray">
			&nbsp;
		</td>
	</tr>
	<tr>
		<td colspan="3" height="20">
			&nbsp;
		</td>
	</tr>
</table>
<% end %>
